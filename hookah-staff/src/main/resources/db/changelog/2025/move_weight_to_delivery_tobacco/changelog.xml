<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="add-weight-to-delivery-tobacco-1" author="system">
        <addColumn tableName="delivery_tobacco">
            <column name="weight" type="integer">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="remove-weight-from-tobacco-1" author="system">
        <dropColumn tableName="tobacco" columnName="weight"/>
    </changeSet>

    <changeSet id="remove-weight-index-from-tobacco-1" author="system">
        <preConditions onFail="MARK_RAN">
            <indexExists indexName="idx_tobacco_brand_taste_weight_price" tableName="tobacco"/>
        </preConditions>
        <dropIndex indexName="idx_tobacco_brand_taste_weight_price" tableName="tobacco"/>
    </changeSet>

    <changeSet id="create-new-index-for-tobacco-1" author="system">
        <createIndex indexName="idx_tobacco_brand_taste_price" tableName="tobacco">
            <column name="brand_name"/>
            <column name="taste"/>
            <column name="price"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
